extends layout

block content
  .container
    h1 FLIGHTS 
    h3 (rows 1-7 are reserved from modifying for display purpose)
      table.table.table-dark.table-item.table-sm
        thead
          tr
            th(scope="col") #
            th(scope="col") Destination
            th(scope="col") Spaceship
            th(scope="col") Broomstick
            th(scope="col") Price
            th(scope="col") 
            th(scope="col") 
        tbody
          each item, index in flights
            tr(id=item.id)
              td
              td 
                span #{item.name}
              td
                span #{item.spaceship}
              td
                span #{item.broomstick}
              td
                span #{item.price}
              td
                a(href=(index<7?"":`/flight/${item.id}/edit`), style="color:#F7F7F7").btn.btn-warning Edit
              td
                form(action=`/flight/${item.id}/delete`, method="POST")
                  button(disabled=(index<7)).btn.btn-danger Delete
      a(href="/flight/add").btn.btn-primary Add New Flight
